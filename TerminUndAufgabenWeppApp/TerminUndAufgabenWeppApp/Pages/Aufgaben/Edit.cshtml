@page "{id:int}"
@model TerminUndAufgabenWeppApp.Pages.Aufgaben.EditModel

<h2>Aufgabe bearbeiten</h2>
<form method="post">
    <input type="hidden" asp-for="Aufgabe.Id" />
    <div class="mb-3">
        <label asp-for="Aufgabe.Titel" class="form-label"></label>
        <input asp-for="Aufgabe.Titel" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Aufgabe.Beschreibung" class="form-label"></label>
        <input asp-for="Aufgabe.Beschreibung" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Aufgabe.ZuErledigenVon" class="form-label"></label>
        <input asp-for="Aufgabe.ZuErledigenVon" class="form-control" type="date" />
    </div>
    <div class="mb-3">
        <label asp-for="Aufgabe.ZuErledigenBis" class="form-label"></label>
        <input asp-for="Aufgabe.ZuErledigenBis" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-success">Speichern</button>
</form>