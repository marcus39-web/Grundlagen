@page "{id:int}"
@model TerminUndAufgabenWeppApp.Pages.Kategorien.DeleteModel

<h2>Kategorie löschen</h2>
<p>Möchten Sie die Kategorie <strong>@Model.Kategorie.Titel</strong> wirklich löschen?</p>
<form method="post">
    <button type="submit" class="btn btn-danger">Löschen</button>
    <a asp-page="Index" class="btn btn-secondary">Abbrechen</a>
</form>